<% provide(:title, "Sign In") %>
<h1>Sign In</h1>
<div class="row">
  <div class="span6 offset3">
    <div class="loginUI" style="background-color:black">
      <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>
        <br/>
        <%= f.submit "Sign In", class: "btn btn-large btn-primary" %>
      <% end %>

      <h5>New user? <%= link_to "Sign up now!", signup_path %></h5>
    </div>
  </div>
</div>
